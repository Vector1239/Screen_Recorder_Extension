{
  "manifest_version": 3,
  "name": "RecordIT",
  "description": "Screen Recorder",
  "version": "1.2",
  "permissions": [
    "activeTab",
    "downloads",
    "tabCapture",
    "tabs",
    "videoCapture",
    "audioCapture"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}